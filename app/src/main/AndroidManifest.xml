<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.myprivatecontacts" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewContactActivity"
            android:label="@string/title_activity_new_contact"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.myprivatecontacts.MainActivity" />
        </activity>
        <activity
            android:name=".DataListActivity"
            android:label="@string/title_activity_data_list" >
        </activity>
        <activity
            android:name=".SearchContactActivity"
            android:label="@string/title_activity_search_contact"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.myprivatecontacts.MainActivity" />
        </activity>
        <activity
            android:name=".UpdateContactActivity"
            android:label="@string/title_activity_update_contact"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.myprivatecontacts.MainActivity" />
        </activity>
    </application>

</manifest>
